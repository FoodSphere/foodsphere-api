{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "reset database",
      "dependsOn": [
        "drop database",
        "remove migrations",
        "update migration",
      ],
      "dependsOrder": "sequence"
    },
    {
      "label": "update migration",
      "dependsOn": [
        "add new migration",
        "update database"
      ],
      "dependsOrder": "sequence"
    },
    {
      "label": "drop database",
      "type": "shell",
      "command": "dotnet ef database drop --force"
    },
    {
      "label": "remove migrations",
      "type": "shell",

      "windows": {
        "command": "if (Test-Path application/Migrations) { Remove-Item application/Migrations -Recurse -Force }"
      },
      "linux": {
        "command": "rm -rf application/Migrations"
        // if [ -d application/Migrations ]; then rm -rf application/Migrations; fi
      }
    },
    {
      "label": "add new migration",
      "type": "shell",

      "windows": {
        "command": "dotnet ef migrations add $(Get-Date -Format yyyy.MM.dd-HH.mm.ss)"
      },
      "linux": {
        "command": "dotnet ef migrations add $(date +\"%Y.%m.%d-%H.%M.%S\")"
      }
    },
    {
      "label": "update database",
      "type": "shell",
      "command": "dotnet ef database update"
    }
  ]
}