{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "reset database",
      "detail": "drop database and reset migrations",
      "dependsOn": [
        "drop database",
        "remove migrations",
      ],
      "dependsOrder": "sequence",
      "problemMatcher": []
    },
    {
      "label": "push new migration",
      "detail": "add migration and update database",
      "dependsOn": [
        "add new migration",
        "update database"
      ],
      "dependsOrder": "sequence"
    },
    {
      "label": "drop database",
      "type": "shell",
      "command": "dotnet ef database drop --force --project src/Infrastructure/Npgsql.Helper/FoodSphere.Npgsql.Helper.csproj --startup-project src/Infrastructure/Npgsql.Migrator/FoodSphere.Npgsql.Migrator.csproj"
    },
    {
      "label": "remove migrations",
      "type": "shell",
      "windows": {
        "command": "if (Test-Path src/Infrastructure/Npgsql.Helper/Migrations) { Remove-Item src/Infrastructure/Npgsql.Helper/Migrations -Recurse -Force }"
      },
      "linux": {
        "command": "if [ -d src/Infrastructure/Npgsql.Helper/Migrations ]; then rm -rf src/Infrastructure/Npgsql.Helper/Migrations; fi"
      }
    },
    {
      "label": "add new migration",
      "type": "shell",
      "windows": {
        "command": "dotnet ef migrations add $(Get-Date -Format yyyy.MM.dd-HH.mm.ss) --project src/Infrastructure/Npgsql.Helper/FoodSphere.Npgsql.Helper.csproj --startup-project src/Infrastructure/Npgsql.Migrator/FoodSphere.Npgsql.Migrator.csproj"
      },
      "linux": {
        "command": "dotnet ef migrations add $(date +\"%Y.%m.%d-%H.%M.%S\") --project src/Infrastructure/Npgsql.Helper/FoodSphere.Npgsql.Helper.csproj --startup-project src/Infrastructure/Npgsql.Migrator/FoodSphere.Npgsql.Migrator.csproj"
      }
    },
    {
      "label": "update database",
      "type": "shell",
      "command": "dotnet ef database update --project src/Infrastructure/Npgsql.Helper/FoodSphere.Npgsql.Helper.csproj --startup-project src/Infrastructure/Npgsql.Migrator/FoodSphere.Npgsql.Migrator.csproj"
    },
    {
      "label": "redeploy",
      "type": "shell",
      "command": "aspire do push && kubectl rollout restart deployment pos-api-deployment && kubectl rollout restart deployment ordering-api-deployment #&& kubectl rollout restart deployment resource-api-deployment"
    }
  ]
}